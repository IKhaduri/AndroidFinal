<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="LoginTextInputLayout" parent="AppTheme">
        <item name="colorControlActivated">@color/colorBOGOrange</item>
        <item name="colorControlHighlight">@color/colorBOGOrange</item>
    </style>

    <style name="ProfileText" >
        <item name="android:height">20dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorProfileText</item>
    </style>

    <style name="ProfileTextValue">
        <item name="android:height">20dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorProfileValue</item>
    </style>

</resources>
